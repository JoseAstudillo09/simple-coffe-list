---
import Star_fillIcon from "../assets/icons/Star_fill.astro";
interface Props {
  name: string;
  image: string;
  price: string;
  rating: number | null | string;
  votes: number;
  popular: boolean;
  available: boolean;
}

const { name, image, rating, votes, price, available, popular } = Astro.props;
const coffeStock = available ? "" : "Sold Out"
const coffePopular = popular ? "Popular" : ""
---

<article class="font-semibold">
  <div class="relative">
    <img class="rounded-xl" src={image} alt="" />
    <p
        class:list={["absolute top-0 m-2 rounded-full px-4 py-1 text-[10px]",{
            "bg-[#F6C768] text-[#111315]": popular
        }
        ]}
    >
      {coffePopular}
    </p>
  </div>
  <div class="flex flex-row gap-[120px] pt-2">
    <h2>{name}</h2>
    <p class="rounded bg-[#BEE3CC] px-3 py-1 text-[#111315] text-[12px]">{price}</p>
  </div>
  <div class="flex flex-row gap-1 pt-2">
    <Star_fillIcon />
    <h1>{rating}</h1>
    <h1 class="text-[#6F757C]">({votes} votes)</h1>
    <p class="pl-[70px] text-[#ED735D]">{coffeStock}</p>
  </div>
</article>
